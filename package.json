{
  "name": "sizlate",
  "version": "2.0.1",
  "license": "MIT",
  "description": "Templating engine using css selectors.",
  "author": "Simon McManus  mcmanus.simon@gmail.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/simonmcmanus/sizlate.git"
  },
  "engines": {
    "node": ">= 4"
  },
  "main": "sizlate.js",
  "dependencies": {
    "cheerio": "0.x.x"
  },
  "devDependencies": {
    "jasmine": "^3.4.0",
    "jasmine-node": "~1.14.5",
    "watchify": "*",
    "karma": "~2.0.0",
    "karma-browserify": "~5.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-firefox-launcher": "~1.1.0",
    "karma-jasmine": "1.1.x",
    "karma-phantomjs-launcher": "1.0.x",
    "karma-serve-static": "1.0.x"
  },
  "browser": {
    "./server/dom.js": "./client/dom.js",
    "fs": "./client/fs.js"
  },
  "scripts": {
    "release": "ralph",
    "test": "npm run test:server && npm run test:client",
    "test:server": "node node_modules/jasmine-node/bin/jasmine-node ./spec/*",
    "test:client": "NODE_ENV=test ./node_modules/karma/bin/karma  start  --single-run",
    "test-watch": "node node_modules/jasmine-node/bin/jasmine-node --autotest ./spec/*",
    "client:build": "node ./node_modules/browserify/bin/cmd.js ./client/client.js > ./sizlate-client.js",
    "watch": "node ./node_modules/watchify/bin/cmd.js ./client/client.js -o ./sizlate-client.js --verbose"
  },
  "bundledDependencies": [
    "cheerio"
  ]
}
