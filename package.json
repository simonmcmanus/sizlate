{
  "name": "sizlate",
  "version": "0.8.5",
  "description": "Templating engine using sizzle selectors.",
  "author": "Simon McManus  mcmanus.simon@gmail.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/simonmcmanus/sizlate.git"
  },
  "engines": {
    "node": ">=0.6"
  },
  "main": "sizlate.js",
  "dependencies": {
    "request": "*",
    "cheerio": "~0.10.5"
  },
  "devDependencies": {
    "jasmine-node": "~1.7.1",
    "jquery": "^2.1.4",
    "watchify": "^3.4.0"
  },
  "browser": {
    "./server/dom.js": "./client/dom.js",
    "fs": "./client/fs.js"
  },
  "scripts": {
    "test": "node node_modules/jasmine-node/bin/jasmine-node ./spec/*",
    "test-watch": "node node_modules/jasmine-node/bin/jasmine-node --autotest ./spec/*",
    "build-client": "node ./node_modules/browserify/bin/cmd.js ./client/client.js > ./sizlate-client.js",
    "watch": "node ./node_modules/watchify/bin/cmd.js ./client/client.js -o ./sizlate-client.js --verbose"
  }
}
